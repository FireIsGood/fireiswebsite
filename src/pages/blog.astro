---
import type { Post } from "../ts/utils";
import Layout from "../layouts/Layout.astro";
import BlogPosts from "../components/BlogPosts.svelte";

const allPosts: Post[] = await Astro.glob("../pages/posts/*.md");
const sortedPosts = allPosts.sort(
    (a, b) =>
        new Date(b.frontmatter.pubDate).getTime() -
        new Date(a.frontmatter.pubDate).getTime(),
);
---

<Layout title="Blog" description="Blog page of FireIsWebsite">
    <h1>My Epic Blog Index</h1>
    <p>Here are some of my epic blog posts</p>
    <BlogPosts posts={allPosts} />
</Layout>
