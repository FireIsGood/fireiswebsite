---
import Nav from "./Nav.astro";

interface Props {
title: String;
}

const { title } = Astro.props;
---

<header>
    <div class="header-content">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-flower"><path d="M12 7.5a4.5 4.5 0 1 1 4.5 4.5M12 7.5A4.5 4.5 0 1 0 7.5 12M12 7.5V9m-4.5 3a4.5 4.5 0 1 0 4.5 4.5M7.5 12H9m7.5 0a4.5 4.5 0 1 1-4.5 4.5m4.5-4.5H15m-3 4.5V15"/><circle cx="12" cy="12" r="3"/><path d="m8 16 1.5-1.5"/><path d="M14.5 9.5 16 8"/><path d="m8 8 1.5 1.5"/><path d="M14.5 14.5 16 16"/></svg>
        <div class="title">
            <a class="dull-link" href="/"
                                 >FireIs<span class="current-link sub-page">{title}</span><span
                                              class="home-link sub-page">Home</span
                                          >
            </a>
        </div>
        <Nav />
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-flower"><path d="M12 7.5a4.5 4.5 0 1 1 4.5 4.5M12 7.5A4.5 4.5 0 1 0 7.5 12M12 7.5V9m-4.5 3a4.5 4.5 0 1 0 4.5 4.5M7.5 12H9m7.5 0a4.5 4.5 0 1 1-4.5 4.5m4.5-4.5H15m-3 4.5V15"/><circle cx="12" cy="12" r="3"/><path d="m8 16 1.5-1.5"/><path d="M14.5 9.5 16 8"/><path d="m8 8 1.5 1.5"/><path d="M14.5 14.5 16 16"/></svg>       
    </div>
</header>

<style>
    header {
        display: grid;
        grid-template-columns: subgrid;
        background-color: var(--background-header);
    }

    .header-content {
        grid-column: half-left / half-right;
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem 1rem;
        align-items: center;
        padding: 0.75rem 2rem;
        min-height: 75px;
        border: 0 solid var(--border-color);
        border-bottom-width: var(--border-width);
    }

    svg {
        display: none
    }

    @media (min-width: 800px) {
        .header-content {
            border-inline-width: var(--border-width);
            border-radius: 0 0 var(--border-radius-small) var(--border-radius-small);
        }
        svg {
            display: block;
        }
        .header-content > svg:last-child {
            margin-left: auto
        }

    }

    header * {
        margin: 0;
    }

    .title {
        font-size: 3rem;
        font-weight: bold;
        font-family: system-ui, sans-serif;
        min-width: 12ch;
        display: grid;
    }
    .sub-page {
        color: var(--text-accent);
    }

    a {
        width: fit-content;
    }

    .home-link {
        display: none;
    }
    a:hover .current-link,
    a:focus .current-link {
        display: none;
    }
    a:hover .home-link,
    a:focus .home-link {
        display: inline;
    }
</style>
